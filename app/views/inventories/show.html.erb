<div class="m-5">
  <h1> <%= @inventory.name %> </h1>
  <div class="m-5 d-flex justify-content-end">
    <%= link_to new_inventory_inventory_food_path(@inventory), class: "btn btn-success" do  %>
      Add Food
    <% end %>
  </div>

  <table class="table table-striped table-bordered">
    <thead>
      <tr>
        <th scope="col">Food</th>
        <th scope="col">quantity</th>
        <th scope="col">Action</th>
      </tr>
    </thead>
    <tbody class="border border-none">
      <% @inventory_foods.each do |inv_food| %>
      <tr>
        <td><%= inv_food.food.name %></td>
        
        <td><%= inv_food.quantity%><%= inv_food.food.measurement_unit %></td>
        <td><%= link_to 'Remove', inventory_inventory_food_path(@inventory, inv_food), data: { turbo_method: :delete } %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>
</div>

<div class="w-75 mx-auto d-flex justify-content-between my-3">
    <%= link_to "Back to inventories", inventories_path, class: "btn btn-info" %>
    <%= button_to "Delete this inventory", @inventory, method: :delete, class: "btn btn-danger" %>
</div>
