<div class='px-5'>
  <h1>Public Recipes</h1>

  <div class='container'>
    <% @recipes.each do |recipe| %>
      <%= link_to recipe_path(recipe), class:'text-reset text-decoration-none' do %>
       <div class='row my-5 border border-dark border-4 p-3'>
          <div class='col'>
            <h2><%= recipe.name %></h2>
            <h4>By: <%= recipe.user.email %></h4>
          </div>

          <div class='col-8 fs-5'>
            <p>Total food items: <%= recipe.count_total_food_items %></p>
            <p>Total price: $<%= recipe.count_total_price %></p>
          </div>
        </div>
      <% end %>
    <% end %>
  </div>
</div>
