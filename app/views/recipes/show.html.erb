
<h1> <%= @recipe.name %> </h1>
<div class="container">
<div class="row">
    <div class="col">
        <p class="fs-4"><span class="fs-3">Preparation time</span>: <%= @recipe.preparation_time %></p>
        <p class="fs-4"><span class="fs-3">Cooking time:</span> <%= @recipe.cooking_time %></p>
        <p class="fs-4"><span class="fs-3">Description: </span><%= @recipe.description %></p>
    </div>
    <div class="col">
        <span class="fs-2">Public:</span>
        <label class="switch">
        <input type="checkbox" <%= @recipe.public ? "checked" : "" %>>
        <span class="slider round"></span>
        </label>
    </div>
</div>

<div class="row">
    <div class="col">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#shoppingListModal">
            Generate shopping list
        </button>
    </div>
    <div class="col">
        <button type="button" class="btn btn-primary" data-toggle="modal" data-target="#ingredientsModal">
            Add ingredient
        </button>
    </div>
</div>
<hr>

<%= link_to 'Back', user_recipes_path %>
</div>
