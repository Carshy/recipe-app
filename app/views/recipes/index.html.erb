<h1> List of recipes </h1>

<% if @recipes.empty? %>
    <p>There are no recipes</p>
<% else %> 
    <ul>
        <% @recipes.each do |recipe| %>
            <li>
                <%= link_to recipe.name, user_recipe_path(recipe.user, recipe) %>
            </li>
        <% end %>
    </ul>
<% end %>
