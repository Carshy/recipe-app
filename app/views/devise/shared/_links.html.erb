<%- if controller_name != 'sessions' %>
  <p class="text-center text-info fs-4 py-2"> Already have and account please <i><b><%= link_to "Log in", new_session_path(resource_name), class: "text-decoration-none text-danger" %> </b></i></p>
<% end %>

<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
  <p class="text-center text-info fs-4 py-2"> Don't have an acount please <i><b><%= link_to "Sign up", new_registration_path(resource_name), class: "text-decoration-none text-danger" %> </b></i></p>
<% end %>

<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
  <p class="text-center text-info fs-4 py-2"><%= link_to "Forgot your password?", new_password_path(resource_name), class: "text-decoration-none text-danger" %><br /><p>
<% end %>

<%- if devise_mapping.confirmable? && controller_name != 'confirmations' %>
  <%= link_to "Didn't receive confirmation instructions?", new_confirmation_path(resource_name), class: "text-decoration-none text-danger" %><br />
<% end %>

<%- if devise_mapping.lockable? && resource_class.unlock_strategy_enabled?(:email) && controller_name != 'unlocks' %>
  <%= link_to "Didn't receive unlock instructions?", new_unlock_path(resource_name), class: "text-decoration-none text-danger" %><br />
<% end %>

<%- if devise_mapping.omniauthable? %>
  <%- resource_class.omniauth_providers.each do |provider| %>
    <%= link_to "Sign in with #{OmniAuth::Utils.camelize(provider)}", omniauth_authorize_path(resource_name, provider), method: :post %><br />
  <% end %>
<% end %>
