<div class='p-5'>
  <%= link_to 'Add Food', new_food_path, class:'btn btn-primary float-end mb-5' %> 

  <table class='table table-striped table-light'>
    <thead>
        <tr>
        <th>Food</th>
        <th>Measurement unit</th>
        <th>Unit price</th>
        <th>Actions</th>
      </tr>
    </thead>

    <tbody class='table-group-divider'>
      <% @foods.each do |food| %>
        <tr>
          <td><%= food.name %></td>
          <td><%= food.measurement_unit %></td>
          <td>$<%= food.price %></td>
          <td><%= link_to 'Delete', food_path(id: food.id), data: { turbo_method: :delete } %> </td>
        </tr>
      <% end %>
    </tbody>
  </table>

</div>
