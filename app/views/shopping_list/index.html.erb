<h1>Shopping List</h1>

<div>
  <p>Amount of food to buy: <%= @missing_foods.length %></p>
  <p>Total value of food needed: </p>
</div>

<div>
  <p>Recipe: <%= @recipe.name %></p>
  <p>Inventory: <%= @inventory.name %></p>
</div>

<table class='table table-striped table-light'>
  <thead>
      <tr>
      <th>Food</th>
      <th>Quantity</th>
      <th>Price</th>
    </tr>
  </thead>

  <tbody class='table-group-divider'>
    <% @missing_foods.each do |mf| %>
      <tr>
        <td><%= mf.food.name %></td>
        <td><%= mf.quantity %> <%= mf.food.measurement_unit %></td>
        <td>$<%= mf.food.price %></td>
      </tr>
    <% end %>
  </tbody>
</table>
