<div class='p-3'>
  <h1>Shopping List</h1>

  <div class='row py-5 fs-4'>
    <div class='col'>
      <p>Amount of food to buy: <%= @missing_foods.length %></p>
      <p>Total value of food needed: $<%= @total_value %></p>
    </div>

    <div class='col'>
      <p>Recipe: <%= @recipe.name %></p>
      <p>Inventory: <%= @inventory.name %></p>
    </div>
  </div>

  <table class='table table-striped table-light'>
    <thead>
        <tr>
        <th>Food</th>
        <th>Quantity</th>
        <th>Price</th>
      </tr>
    </thead>

    <tbody class='table-group-divider'>
      <% @missing_foods.each do |mf| %>
        <tr>
          <td><%= mf[:name] %></td>
          <td><%= mf[:quantity] %> <%= mf[:measurement_unit] %></td>
          <td>$<%= mf[:price] %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
