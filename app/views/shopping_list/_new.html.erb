
  <div class="modal-header">
    <h4 class="modal-title" id="myModalLabel">Generating Shopping List</h4>
    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
  </div>
  <div class="modal-body">
    <%= bootstrap_form_with url: shopping_list_index_path, method: :get do |f| %>
      <%= f.select :inventories, options_from_collection_for_select(@inventories, :id, :name) %>
      <%= f.hidden_field :recipe, value: params[:recipe] %>
      <%= f.submit "Generate" %>
    <% end %>
  </div>